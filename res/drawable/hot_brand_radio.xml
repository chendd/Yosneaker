<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_checked="false">

<shape>
  
    <solid android:color="#E7E7E7" />
    <corners  android:radius="10dp" />

    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" />
        
</shape>
        
</item>

<item android:state_checked="true">
    
<shape>
  
    <solid android:color="@color/tab_text_selected" />
    <corners  android:radius="10dp" />

    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" />
        
</shape>

</item>

</selector>