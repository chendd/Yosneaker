<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/blue_color_default"/><!-- 填充色 -->
            <corners android:radius="5dp"/><!-- 圆角大小 -->
            <padding 
                android:left="10dp"
                android:top="10dp"
                android:bottom="10dp"
                android:right="10dp"/><!-- 按钮内部padding -->
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/blue_color_pressed"/><!-- 填充色 -->
            <corners android:radius="5dp"/>
            <padding 
                android:left="10dp"
                android:top="10dp"
                android:bottom="10dp"
                android:right="10dp"/><!-- 按钮内部padding -->
        </shape>
    </item>
</selector>
