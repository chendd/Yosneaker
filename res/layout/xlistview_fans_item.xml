<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myspace="http://schemas.android.com/apk/res/com.yosneaker.client"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_fans_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dp"
        android:src="@drawable/list_user_head" />

    <TextView 
        android:id="@+id/iv_fans_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_fans_head"
        android:layout_alignTop="@id/iv_fans_head"
        android:layout_marginLeft="8dp"
        android:text="lj神经刀"
        />
    
    <ImageView
        android:id="@+id/iv_fans_gender"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/iv_fans_username"
        android:layout_alignTop="@id/iv_fans_head"
        android:layout_marginLeft="8dp"
        android:src="@drawable/male" />
    
    <TextView 
        android:id="@+id/iv_fans_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_fans_username"
        android:layout_toRightOf="@id/iv_fans_head"
        android:layout_alignBottom="@id/iv_fans_head"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="64dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="生活不只是眼前的苟且，还有诗和远方"
        />
    
    <ImageView
        android:id="@+id/iv_fans_operate"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:src="@drawable/checkbox_on" />
    
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/iv_fans_head"
            android:background="?android:attr/listDivider" />
    
</RelativeLayout>