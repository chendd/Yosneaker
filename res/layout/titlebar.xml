<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="@drawable/titlebar_bg" >

    <TextView
        android:id="@+id/mTextViewLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:visibility="gone"
        android:background="@drawable/ic_back"
        android:gravity="center"  />



    <TextView
        android:id="@+id/mTextviewCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@drawable/white"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/mTextviewRight1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp" 
        android:visibility="gone"
        android:background="@drawable/ic_add_friend" />
    
     <TextView
        android:id="@+id/mTextviewRight2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/mTextviewRight1"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp" 
        android:visibility="gone"
        android:background="@drawable/ic_share" /> 
    
     <TextView
        android:id="@+id/mTextviewRight3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/mTextviewRight2"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp" 
        android:visibility="gone"
        android:background="@drawable/ic_star" /> 


</RelativeLayout>