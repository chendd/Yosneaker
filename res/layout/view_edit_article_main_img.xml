<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/iv_comment_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/default_comment_bg" />

    <com.yosneaker.client.view.RoundImageView
        android:id="@+id/riv_comment_user_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/iv_comment_bg"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:src="@drawable/list_user_head" />

    <TextView
        android:id="@+id/tv_comment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/riv_comment_user_icon"
        android:layout_toRightOf="@id/riv_comment_user_icon"
        android:text="2014.12.26"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_comment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_comment_date"
        android:layout_toRightOf="@id/riv_comment_user_icon"
        android:text="韦德之道2&quot;踏冰&quot; 开箱测评"
        android:textColor="@color/white"
        android:textSize="12sp" />
    
    <ImageView 
        android:id="@+id/iv_comment_edit"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/tv_comment_title"
        android:layout_above="@id/tv_comment_date"
        android:layout_marginBottom="-3dp"
        android:background="@drawable/ic_next"
        />

</RelativeLayout>