<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yosneaker.client"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
	<uses-permission android:name="android.permission.INTERNET" />
    
    
    <application
        android:name="com.yosneaker.client.app.YosneakerApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <!-- 首页 -->
        <activity
            
            
            android:name="com.yosneaker.client.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- 测评详情 -->
        <activity
            android:name="com.yosneaker.client.CommentDetailActivity"
            android:label="@string/title_comment_detail" 
            android:screenOrientation="portrait">
        </activity>
        
        <!-- 编辑测评标题 -->
        <activity
            android:name="com.yosneaker.client.AddCommentTitleActivity"
            android:label="@string/title_comment_title" 
            android:screenOrientation="portrait"
            >
        </activity>
        
        <!-- 编辑测评详情 -->
        <activity
            android:name="com.yosneaker.client.EditCommentActivity"
            android:label="@string/title_comment_detail" 
            android:screenOrientation="portrait"
            >
        </activity>
        
        <!-- 编辑测评简介 -->
        <activity
            android:name="com.yosneaker.client.EditCommentIntroActivity"
            android:label="@string/comment_detail_intro" 
            android:windowSoftInputMode="stateVisible|adjustResize"
            android:screenOrientation="portrait"
            >
        </activity>
        
        <!-- 编辑测评项 -->
        <activity
            android:name="com.yosneaker.client.EditCommentItemActivity"
            android:label="@string/comment_detail_class" 
            android:windowSoftInputMode="stateVisible|adjustResize"
            android:screenOrientation="portrait"
            >
        </activity>
        
        <!-- 编辑测评总评 -->
        <activity
            android:name="com.yosneaker.client.EditCommentSummarizeActivity"
            android:label="@string/comment_detail_summarize" 
            android:windowSoftInputMode="stateVisible|adjustResize"
            android:screenOrientation="portrait"
            >
        </activity>
        
        <activity
            android:theme="@style/AppTheme.Transparent"
            android:name="com.yosneaker.client.ImageDetailActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            
        </activity>
        
    </application>

</manifest>
